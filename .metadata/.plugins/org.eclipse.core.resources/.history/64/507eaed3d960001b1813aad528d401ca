package com.Utility;

import java.io.FileInputStream;
import java.io.IOException;
import java.util.Properties;

import org.testng.annotations.BeforeTest;

public class Config {
	public static FileInputStream fis = null;
	public static Properties prop = null;
	public static String authorUrl="";
	public static String appcentreUrl="";
	public static String password="";
	public static String username="";

	public Config() {
	}

	@BeforeTest
	public String[] getProperty() {
		prop = new Properties();
		try {
			fis = new FileInputStream(
					"C:\\Users\\Admin\\git\\nexlp\\TestAutomation_New\\automated-testing\\Appveen\\config.properties");
			prop.load(fis);
		} catch (IOException e) {
			System.out.println("Could not read properties file");
		}
		authorUrl = prop.getProperty("authorUrl");
		System.out.println(authorUrl);
		appcentreUrl = prop.getProperty("appcenterUrl");
		System.out.println(appcentreUrl);
		username = prop.getProperty("username");
		System.out.println(username);
		password = prop.getProperty("password");
		System.out.println(password);
		String sarray[]= {authorUrl, appcentreUrl, username, password};
		return sarray;
	}
}
